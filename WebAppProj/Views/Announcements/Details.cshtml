@model WebAppProj.Models.AnnouncementDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Announcement</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Announcement.AnnouncementDesc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Announcement.AnnouncementDesc)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Comments
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Comments item in Model.Comments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentDesc)
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Details">
<div class="form-horizontal">
    <h4>Add New Comment</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AnnouncementsId" value ="@Model.Announcement.Id"/>
    <div class="form-group">
        <label asp-for="Comment" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
</form>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Announcement.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
